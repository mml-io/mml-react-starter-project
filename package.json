{
  "name": "server",
  "private": true,
  "scripts": {
    "build": "node ./build.js --build",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "npm run build && npm run serve",
    "dev:client": "cd mml-document && npm run start",
    "serve": "cross-env DEV=true PORT=20205 node --enable-source-maps ./build/index.js",
    "start": "npm run build && node --enable-source-maps ./build/index.js",
    "type-check": "tsc --noEmit",
    "lint": "eslint \"./src/**/*.{js,jsx,ts,tsx}\" --max-warnings 0",
    "lint-fix": "eslint \"./src/**/*.{js,jsx,ts,tsx}\" --fix",
    "postinstall": "cd mml-document && npm install && npm run build"
  },
  "dependencies": {
    "@types/chokidar": "^2.1.3",
    "@types/express": "^4.17.17",
    "@types/express-ws": "^3.0.1",
    "chokidar": "^3.5.3",
    "esbuild": "^0.18.10",
    "esbuild-plugin-copy": "^2.1.1",
    "express": "^4.18.2",
    "express-ws": "^5.0.2",
    "mml-web-client": "0.4.0",
    "networked-dom-server": "0.4.0"
  },
  "devDependencies": {
    "typescript": "5.0.4",
    "concurrently": "^8.2.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.43.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-import-resolver-typescript": "3.5.5",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^16.0.1",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "@typescript-eslint/eslint-plugin": "^5.60.1",
    "@typescript-eslint/parser": "^5.60.1"
  }
}
